<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wb_darkgrey">

    <ImageView
        android:id="@+id/list_item_project_image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        tools:src="@drawable/logo"
        android:contentDescription="Bild"/>

    <org.weitblicker.weitblickapp.BreeSerifTextView
        android:id="@+id/list_item_project_host"
        android:background="@drawable/news_city_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_item_project_image"
        android:textColor="@color/wb_orange"
        android:textSize="6pt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:text="host"/>
    
    <ImageView
        android:id="@+id/arrow_up_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/arrow_up"
        android:layout_alignBottom="@id/list_item_project_image"
        android:layout_centerHorizontal="true"/>

    <org.weitblicker.weitblickapp.BreeSerifTextView
        android:id="@+id/list_item_project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/list_item_project_image"
        android:textColor="@color/wb_orange"
        android:textSize="8pt"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp"
        tools:text="title"/>

    <org.weitblicker.weitblickapp.OpenSansTextView
        android:id="@+id/list_item_project_abstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_project_title"
        android:textColor="@color/wb_lightgrey"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:text="abstract"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/divider"/>

</RelativeLayout>